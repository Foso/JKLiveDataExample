<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="de.jensklingenberg.jklivedata.MainActivity"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"

      >
    <TextView
        android:id="@+id/liveData1Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="LiveData1"
        />


    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/liveData1Headline"
        android:orientation="horizontal"
        >
      <Button
          android:id="@+id/btnInc"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="+1"
          />
      <Button
          android:id="@+id/btnDec"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="-1"
          />


    </LinearLayout>

    <TextView
        android:id="@+id/count1IntegerTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLayout"
        android:text="count1IntegerTv"

        />


    <LinearLayout
        android:id="@+id/valueLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/count1IntegerTv"
        android:orientation="horizontal"
        >


      <TextView
          android:id="@+id/countStringTv"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="countStringTv"
          />
    </LinearLayout>


  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/liveData2Rl"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      >
    <TextView
        android:id="@+id/liveData2Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="LiveData2"
        />

    <LinearLayout
        android:id="@+id/btnLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/liveData2Headline"
        android:orientation="horizontal"
        >

      <Button
          android:id="@+id/btnInc2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"

          android:layout_marginTop="20dp"
          android:text="+1"
          />
      <Button
          android:id="@+id/btnDec2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"

          android:layout_marginTop="20dp"
          android:text="-1"
          />


    </LinearLayout>


    <TextView
        android:id="@+id/secondTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnLayout2"

        android:layout_weight="1"
        android:text="Hello World!"
        />

  </RelativeLayout>


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      >

    <TextView
        android:id="@+id/liveDataMisc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Misc"
        />


    <TextView
        android:id="@+id/mediatorLiveDataValueTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/liveDataMisc"
        />

    <TextView
        android:id="@+id/fromFlowable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mediatorLiveDataValueTv"

        />

    <TextView
        android:id="@+id/rxJava"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fromFlowable"

        />


  </RelativeLayout>

</LinearLayout>
